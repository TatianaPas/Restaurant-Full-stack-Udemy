@page
@model UdemyRestaurantProject.Pages.Admin.FoodTypes.DeleteModel

<form method="post">
    <input hidden asp-for="FoodT.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Category</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="FoodT.Name"></label>
        <input asp-for="@Model.FoodT.Name" disabled class="form-control"/>

    </div>
    
    <button type="submit" class="btn btn-danger" style="width:200px">Delete</button>
    <a asp-page="Index" class="btn btn-secondary" style="width:200px">Back to Categories</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}
